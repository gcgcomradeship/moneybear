    link href="#{Routes.static_path(@conn, "/css/app.css")}" rel="stylesheet" /
    link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet"
    link href="https://fonts.googleapis.com/css?family=Teko&display=swap" rel="stylesheet"
  body.sign_in_background
    canvas id="c"
    .board.sign_in
      = form_for @conn, Routes.session_path(@conn, :new), [as: :session, class: ""], fn f ->
        = text_input f, :email, placeholder: "email", class: "sign_elem"
        = password_input f, :password, placeholder: "password", class: "sign_elem"
        = submit "Sign in", class: "sign_elem"

    script src="#{Routes.static_path(@conn, "/js/app.js")}" type="text/javascript"
